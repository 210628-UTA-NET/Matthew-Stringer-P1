@model IEnumerable<StoreWebApp.Models.StoreFrontVM>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>Select Store to Order From</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>
                    @Html.ActionLink("Select", "Index", "PlaceOrder", new { p_cust_id = item.CustomerId, p_store_id = item.StoreFrontId }, new { @style = "color:white", @class = "btn btn-secondary" })
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>