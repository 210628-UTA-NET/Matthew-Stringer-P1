@model IEnumerable<StoreWebApp.Models.InventoryItemVM>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>Inventory Management</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @{ 
                int p_id = 0;
            }
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Prod.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Prod.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
            </tr>
                p_id = item.StoreFrontId;
            }
        </tbody>
    </table>
    @if (p_id != 0)
    {
<form asp-controller="InventoryReplenish" asp-action="Index">
    <input type="hidden" name="p_id" value="@p_id" />
    <button type="submit" class="btn btn-primary">Replenish inventory for this store</button>
</form>
    }
</body>
</html>