@model StoreWebApp.Models.ReviewOptionsVM

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>Select Report Options</h1>
    <div>
        <form asp-action="MakeReport">
            @{
                // For some resason, just implementing this as an input with value="@Model.Cust" kept resolving as "value=value"
                if (Model.Cust)
                {
                <input type="hidden" name="p_cust" value="true" />
                }
                else
                {

            <input type="hidden" name="p_cust" value="false" />
                }
            }
            <input type="hidden" name="p_id" value="@Model.Id" />
            <span>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="p_date" id="flexRadioDefault1" value="true" checked>
                    <label class="form-check-label" for="flexRadioDefault1">
                        Sort by Date
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="p_date" id="flexRadioDefault2" value="false">
                    <label class="form-check-label" for="flexRadioDefault2">
                        Sort by Price
                    </label>
                </div>
            </span>
            <span>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="p_ascending" id="flexRadioDefault3" value="true" checked>
                    <label class="form-check-label" for="flexRadioDefault3">
                        Ascending
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="p_ascending" id="flexRadioDefault4" value="false">
                    <label class="form-check-label" for="flexRadioDefault4">
                        Descending
                    </label>
                </div>
            </span>
            <button type="submit" class="btn btn-primary">View Report</button>
        </form>
    </div>
</body>
</html>