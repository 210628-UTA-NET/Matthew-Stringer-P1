@model IEnumerable<StoreWebApp.Models.InventoryReplenishVM>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>Inventory Replenishment</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Current Quantity</th>
                <th>Additional Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Prod.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Prod.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.QuantNow)</td>
                <td>@Html.TextBoxFor(modelItem => item.NewQuant, new { @Value = "0", @type = "number", @min = "0" })</td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>