@model ICollection<StoreWebApp.Models.InventoryReplenishVM>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
        <h1>Inventory Replenishment</h1>
        <div>
            <form asp-action="ReviewChanges">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Current Quantity</th>
                            <th>Additional Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @Html.EditorForModel()
                    </tbody>
                </table>
                <button type="submit" class="btn btn-primary">Review Order</button>
            </form>
              <a asp-action="Index" class="btn btn-danger" style="position:relative; top:15px; width:100px">Back</a>
        </div>
</body>
</html>